{
  "name": "high-quality-still-finder",
  "author": "HyperfocusArtisan",
  "description": "Find High Quality Images",
  "version": "0.1.2",
  "private": true,
  "main": ".output/electron/background.js",
  "scripts": {
    "dev": "nuxt dev -o",
    "build": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && electron-builder install-app-deps",
    "copy-iqa": "node -e \"const fs = require('fs'); const path = require('path'); const src = path.join('iqa', 'iqa.exe'); const dest = path.join('.output', 'electron', 'iqa', 'iqa.exe'); fs.mkdirSync(path.dirname(dest), { recursive: true }); fs.copyFileSync(src, dest);\"",
    "transpile-electron": "tsc -p ./electron --outDir .output/electron",
    "dev:electron": "NODE_ENV=development concurrently --kill-others \"nuxt dev\" \"tsc-watch -p ./electron --outDir .output/electron --onSuccess 'electron ./.output/electron/background.js'\"",
    "dev:electron:win": "set NODE_ENV=development& concurrently --kill-others \"nuxt dev\" \"tsc-watch -p ./electron --outDir .output/electron --onSuccess run.electron\"",
    "build:electron": "yarn build && yarn transpile-electron && yarn copy-iqa && node build.js"
  },
  "devDependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "@json2csv/plainjs": "^7.0.6",
    "@nuxt/image": "^1.8.1",
    "@nuxt/ui": "^2.18.7",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@nuxtjs/i18n": "^8.5.5",
    "@nuxtjs/stylelint-module": "^5.2.0",
    "@types/express": "^5.0.0",
    "axios": "^1.7.2",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "csv-parser": "^3.0.0",
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nuxt": "^3.13.2",
    "papaparse": "^5.4.1",
    "prettier": "^3.3.3",
    "sass": "^1.80.3",
    "sass-loader": "^16.0.2",
    "stylelint": "16.10.0",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.6.3",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@json2csv/plainjs": "^7.0.6",
    "axios": "^1.7.7",
    "electron-builder-squirrel-windows": "25.1.8",
    "electron-log": "^5.2.0",
    "electron-updater": "^6.3.9",
    "express": "^4.21.1",
    "glob": "^11.0.0",
    "hazardous": "^0.3.0",
    "install-peerdeps": "^3.0.3",
    "meow": "^9.0.0",
    "napi-wasm": "^1.1.3",
    "papaparse": "^5.4.1",
    "terser": "^5.36.0",
    "webpack": "5.95.0"
  },
  "build": {
    "appId": "hqsf.app.testing",
    "productName": "High-Quality-Still Finder",
    "executableName": "hqsf-app",
    "includeSubNodeModules": false,
    "directories": {
        "output": "release",
        "buildResources": "dist"
    },
    "extraResources": [
      {
        "from": "iqa/iqa.exe",
        "to": "iqa/iqa.exe"
      }
    ],
    "files": [
        "**/*",
        "dist/**/*",
        "!.github",
        "!.vs",
        "!node_modules/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "unicode": false,
      "artifactName": "${productName}Installer.${version}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "portable": {
      "unicode": false,
      "artifactName": "${productName}Portable.${version}.${ext}"
    }
  }
}
